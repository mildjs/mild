{
  "name": "@mildjs/core",
  "version": "2.0.0-alpha.0",
  "author": "Thada Wangthammang",
  "description": "Simple Express decorator for router",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mildronize/mildjs.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=10",
    "npm": ">=5"
  },
  "bugs": {
    "url": "https://github.com/mildronize/mildjs/issues"
  },
  "homepage": "https://github.com/mildronize/mildjs#readme",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "chokidar \"src/**/*.ts\" -c \"npm link\"",
    "format": "prettier --write \"src/**/*.ts\" ",
    "lint": "tslint -p tsconfig.build.json",
    "test": "jest --config jestconfig.json --no-cache --forceExit",
    "test:coverage": "jest --config jestconfig.json --no-cache ---forceExit --coverage",
    "test:watch": "jest --config jestconfig.json --watch --forceExit",
    "prepare": "run-s build",
    "prepublishOnly": "run-s format lint test build",
    "publish:patch": "npm version patch --force && npm publish",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "example": "chokidar \"**/*.ts\" -c  \" ts-node example/tester/index.ts\"",
    "doc:build": "typedoc",
    "doc:watch": "chokidar \"src/**/*.ts\" -c  \"typedoc\"",
    "doc:serve": "live-server _docs",
    "doc:dev": "run-p doc:build && run-p doc:watch doc:serve"
  },
  "peerDependencies": {
    "reflect-metadata": ">= 0.1.0 < 0.2.0",
    "express": ">= 4.0.0 < 5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/mock-req-res": "^1.1.3",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "chokidar-cli": "^2.1.0",
    "jest": "^26.6.1",
    "live-server": "^1.2.1",
    "mock-req-res": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.1",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedi": "^0.8.0",
    "typedoc": "^0.19.2",
    "typeorm": "^0.2.29",
    "typescript": "^4.0.5"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "express",
    "decorators",
    "router",
    "express-router",
    "controllers",
    "providers",
    "modules",
    "services",
    "web-framework",
    "typescript"
  ],
  "dependencies": {
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "connect": "^3.7.0",
    "express": "~4.17.1",
    "http-status-codes": "^2.1.4",
    "injection-js": "^2.3.2",
    "reflect-metadata": "^0.1.13"
  }
}
